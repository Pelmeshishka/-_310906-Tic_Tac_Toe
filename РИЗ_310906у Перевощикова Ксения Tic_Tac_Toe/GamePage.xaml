<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="РИЗ_310906у_Перевощикова_Ксения_Tic_Tac_Toe.GamePage">

    <StackLayout Margin="20" VerticalOptions="CenterAndExpand">

        <Label Text="Крестики-нолики" TextTransform="Uppercase" HorizontalOptions="Center" FontSize="20" Margin="10"/>
        <Label Text="Текущий игрок:" TextTransform="Uppercase" HorizontalOptions="Center"/>
        <Label x:Name="currPlayerLabel" Text="Игрок:" TextTransform="Uppercase" HorizontalOptions="Center"/>

        <Grid x:Name="gridTTT" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Margin="10"></Grid>

        <Button Text="Вернуться в меню"       Clicked="OnReturnToMainMenuClicked"/>

    </StackLayout>
    
    
</ContentPage>